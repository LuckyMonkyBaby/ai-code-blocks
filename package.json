{
  "name": "@luckymonkybaby/streaming-code-blocks",
  "version": "1.0.0",
  "description": "TypeScript library for parsing streaming code blocks from AI chat responses",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:parser": "jest --testPathPattern=parser",
    "test:storage": "jest --testPathPattern=storage",
    "test:state": "jest --testPathPattern=state-manager",
    "test:hook": "jest --testPathPattern=use-streaming-code-blocks",
    "test:types": "jest --testPathPattern=types",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run test && npm run build",
    "prepare": "npm run build"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@ai-sdk/react": "^0.0.1",
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.2.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}